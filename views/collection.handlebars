<h1>Vinyl Destination</h1>
<div class='row'>
    <div class='col-sm-3'>
        <h3><a href='/'>Home</a></h3>
    </div>
    <div class='col-sm-3'>
        <h3><a href='/mycollection'>My Collection</a></h3>
    </div>
    <div class='col-sm-3'>
        <h3><a href='/search'>Search</a></h3>
    </div>
    <div class='col-sm-3'>
        <h3><a href='/logout'>Log Out</a></h3>
    </div>
</div>
<div class='divider3'></div>

<div class="container">
    <div class="row">

        <div class="col-12">
            <h2>My Collection</h2>

            {{#if albums}}
                {{#each albums}}
                    <div style="min-height:200px;">
                        <hr>
                        <img style="height:174px;" class="float-right" src="{{this.imageURL}}" alt="{{this.name}} Album Cover">
                        <div>
                            {{#if this.isFavorite}}
                                <i class="unfavorite glyphicon glyphicon-heart" data-id="{{this.id}}"></i>
                            {{else}}
                                <i class="favorite glyphicon glyphicon-heart-empty" data-id="{{this.id}}"></i>
                            {{/if}}
                            <strong>{{this.name}}</strong>
                        </div>                        <div><em>by {{this.artist}}</em></div>
                        <div>{{this.wikiSummary}}</div>
                        <button class="stream btn btn-primary" data-url="{{this.streamURL}}">Stream on last.fm</button>
                        <button class="delete btn btn-danger" data-id="{{this.id}}">Remove Album</button>
                    </div>
                {{/each}}
            {{else}}
                <h4>No Albums to Display</h4>
                <img style="width:100%;" src="https://media.giphy.com/media/Ll1rEkDebTIdO/giphy.gif" alt="music gif">
            {{/if}}
            <h4>Add albums to your collection by <a href="/search">searching last.fm's database</a>,</h4>
            <h4>or <a href="/addmanual">add album info manually!</a></h4>
        </div>
    </div>
</div>